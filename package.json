{
  "name": "homebridge-lib",
  "description": "Library for homebridge plugins",
  "author": "Erik Baauw",
  "maintainers": [
    "ebaauw"
  ],
  "license": "Apache-2.0",
  "version": "7.1.11",
  "keywords": [
    "homekit",
    "homebridge"
  ],
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./*": "./lib/*.js"
  },
  "files": [
    "index.js",
    "lib",
    "cli"
  ],
  "bin": {
    "hap": "cli/hap.js",
    "json": "cli/json.js",
    "sysinfo": "cli/sysinfo.js",
    "upnp": "cli/upnp.js"
  },
  "engines": {
    "homebridge": "^1.11.1||^2.0.0-beta",
    "node": "24.11.0||^24||^22||^20"
  },
  "dependencies": {
    "@homebridge/plugin-ui-utils": "~2.1.0",
    "hb-lib-tools": "~2.2.13"
  },
  "scripts": {
    "prepare": "standard && rm -rf out && jsdoc -c jsdoc.json",
    "test": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebaauw/homebridge-lib.git"
  },
  "bugs": {
    "url": "https://github.com/ebaauw/homebridge-lib/issues"
  },
  "homepage": "https://github.com/ebaauw/homebridge-lib#readme"
}
